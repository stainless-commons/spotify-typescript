{
  "dxt_version": "0.2",
  "name": "spotify-ts-mcp",
  "version": "0.0.1",
  "description": "The official MCP Server for the Spotify API",
  "author": {
    "name": "Spotify",
    "email": "wave@cjav.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stainless-commons/spotify-ts.git"
  },
  "homepage": "https://github.com/stainless-commons/spotify-ts/tree/main/packages/mcp-server#readme",
  "documentation": "https://spotify.cjav.dev",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SPOTIFY_ACCESS_TOKEN": "${user_config.SPOTIFY_ACCESS_TOKEN}"
      }
    }
  },
  "user_config": {
    "SPOTIFY_ACCESS_TOKEN": {
      "title": "access_token",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
